<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ===== FORM VIEW ===== -->
    <record id="view_nextevent_order_form" model="ir.ui.view">
        <field name="name">nextevent.order.form</field>
        <field name="model">nextevent.order</field>
        <field name="arch" type="xml">
            <form string="Événement">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="attendees"/>
                    </group>

                    <group>
                        <field name="description"/>
                    </group>

                    <separator string="Résultats IA"/>

                    <group>
                        <field name="event_type" readonly="1"/>
                        <field name="estimated_duration" readonly="1"/>
                        <field name="estimated_budget" readonly="1"/>
                        <field name="required_staff" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ===== TREE VIEW ===== -->
    <record id="view_nextevent_order_tree" model="ir.ui.view">
        <field name="name">nextevent.order.tree</field>
        <field name="model">nextevent.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="attendees"/>
                <field name="event_type"/>
                <field name="estimated_budget"/>
            </tree>
        </field>
    </record>

    <!-- ===== ACTION ===== -->
    <record id="action_nextevent_order" model="ir.actions.act_window">
        <field name="name">Événements</field>
        <field name="res_model">nextevent.order</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
